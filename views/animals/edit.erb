<form method="POST" action="/animals/<%= @animal.id %>">

 <p>Name: <%= @animal.name %></p>

 <label for="training-status">Training required?</label>
 <select id="training-status" name="training_status">
   <option selected <%= "selected" if (@animal.training_status == true) %> value=true>Yes</option>
   <option selected <%= "selected" if (@animal.training_status == false) %> value=false>No</option>
 </select>

 <label for="training-status">Vet treatment required?</label>
 <select id="training-status" name="training_status">
   <option selected <%= "selected" if (@animal.vet_status == true) %> value=true>Yes</option>
   <option selected <%= "selected" if (@animal.vet_status == false) %> value=false>No</option>
 </select>

  <input type="submit" value="Save Changes"/>
  
</form>