
<form method="POST" action="/animals">

  <label for="animal-name">Name:</label>
  <input type="text" id="animal-name" name="name"/>

  <label for="animal-type">Type:</label>
  <input type="text" id="animal-type" name="type"/>

  <label for="training-status">Training required?</label>
  <select id="training-status" name="training_status">
    <option value=true>Yes</option>
    <option value=false>No</option>
  </select>

  <label for="vet-status">Vet treatment required?</label>
  <select id="vet-status" name="vet_status">
    <option value=true>Yes</option>
    <option value=false>No</option>
  </select>

  <input type="submit" value="Add Animal"/>
  
</form>
